<h2>Editar Transação</h2>

<%= form_with model: [@family_group, @transaction], local: true do |form| %>
  <div class="form-group">
    <%= form.label :description %>
    <%= form.text_field :description, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :amount %>
    <%= form.number_field :amount, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :transaction_category_id, "Categoria" %>
    <%= form.collection_select :transaction_category_id, TransactionCategory.all, :id, :name, { prompt: "Selecione uma categoria" }, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :date %>
    <%= form.date_field :date, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.submit "Atualizar Transação", class: "btn btn-primary" %>
  </div>
<% end %>
